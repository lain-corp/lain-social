# ======================================
# Bot Configuration
# ======================================

# Run mode: 'scheduled' for continuous operation, 'once' for single post
RUN_MODE=scheduled

# Post interval in hours (only used in scheduled mode)
POST_INTERVAL_HOURS=6

# Post to all platforms simultaneously (true) or with delays (false)
SIMULTANEOUS_POST=true

# Directory containing Lain images (default: ./images)
IMAGE_DIR=./images

# ======================================
# AI Comment Generation (Optional)
# ======================================

# Enable AI-generated comments (true/false)
USE_AI_COMMENTS=false

# AI Provider: 'openai', 'anthropic', or 'openrouter'
AI_PROVIDER=openrouter

# OpenRouter Configuration (if using OpenRouter - RECOMMENDED for multimodal)
# OpenRouter provides access to multiple AI models with vision capabilities
OPENROUTER_API_KEY=your_openrouter_api_key_here
OPENROUTER_MODEL=anthropic/claude-3.5-sonnet

# ======================================
# Twitter/X Configuration (Optional)
# ======================================

TWITTER_API_KEY=your_twitter_api_key_here
TWITTER_API_SECRET=your_twitter_api_secret_here
TWITTER_ACCESS_TOKEN=your_twitter_access_token_here
TWITTER_ACCESS_TOKEN_SECRET=your_twitter_access_token_secret_here
TWITTER_BEARER_TOKEN=your_twitter_bearer_token_here

# ======================================
# Reddit Configuration (Optional)
# ======================================

REDDIT_CLIENT_ID=your_reddit_client_id_here
REDDIT_CLIENT_SECRET=your_reddit_client_secret_here
REDDIT_USERNAME=your_reddit_username_here
REDDIT_PASSWORD=your_reddit_password_here
REDDIT_USER_AGENT=LainSocialBot/1.0
REDDIT_SUBREDDIT=test

# ======================================
# Discord Configuration (Optional)
# ======================================

# Discord Webhook URL for posting to a channel
# Get this from Server Settings > Integrations > Webhooks
DISCORD_WEBHOOK_URL=https://discord.com/api/webhooks/your_webhook_id/your_webhook_token

# ======================================
# Telegram Configuration (Optional)
# ======================================

# Telegram Bot Token from @BotFather
TELEGRAM_BOT_TOKEN=1234567890:ABCdefGHIjklMNOpqrsTUVwxyz1234567890

# Telegram Chat ID (can be a user ID, group ID, or channel ID)
# Use @userinfobot or @getidsbot to find your chat ID
TELEGRAM_CHAT_ID=-1001234567890

# ======================================
# Facebook Page Configuration (Optional)
# ======================================

# Facebook Page ID (numeric ID of your Page)
FB_PAGE_ID=123456789012345

# Facebook Page Access Token (must have publish_pages and manage_pages permissions)
# Generate from: https://developers.facebook.com/tools/explorer/
FB_PAGE_ACCESS_TOKEN=your_facebook_page_access_token_here

# Facebook Graph API Version (optional, default: v17.0)
FB_GRAPH_VERSION=v17.0

# ======================================
# LinkedIn Configuration (Optional)
# ======================================

# LinkedIn OAuth2 Access Token with w_member_social scope
# For organization posting, use rw_organization_admin scope
LINKEDIN_ACCESS_TOKEN=your_linkedin_access_token_here

# LinkedIn Owner URN
# For personal: urn:li:person:YOUR_PERSON_ID
# For organization: urn:li:organization:YOUR_ORG_ID
LINKEDIN_OWNER_URN=urn:li:person:xxxxxxxxxxxxx

# LinkedIn API Base URL (optional, default: https://api.linkedin.com)
LINKEDIN_API_BASE_URL=https://api.linkedin.com

# ======================================
# WhatsApp Cloud API Configuration (Optional)
# ======================================

# WhatsApp Business Phone Number ID from Meta Business
WHATSAPP_PHONE_NUMBER_ID=123456789012345

# WhatsApp Cloud API Access Token
WHATSAPP_ACCESS_TOKEN=your_whatsapp_access_token_here

# Destination phone number in international format (e.g., +15551234567)
WHATSAPP_TO=+15551234567

# WhatsApp API Base URL (optional, default: https://graph.facebook.com)
WHATSAPP_API_BASE_URL=https://graph.facebook.com

# ======================================
# Signal Configuration (Optional)
# ======================================

# Signal CLI REST API URL (requires running signal-cli-rest-api)
# Get it from: https://github.com/bbernhard/signal-cli-rest-api
SIGNAL_CLI_REST_URL=http://localhost:8080

# Recipient phone number in international format (e.g., +15551234567)
SIGNAL_RECIPIENT=+15551234567

# ======================================
# TikTok Configuration (Optional)
# ======================================

# TikTok App Credentials (from TikTok Developer Portal)
TIKTOK_CLIENT_KEY=your_tiktok_client_key_here
TIKTOK_CLIENT_SECRET=your_tiktok_client_secret_here

# TikTok OAuth2 Access Token (obtain through OAuth flow)
TIKTOK_ACCESS_TOKEN=your_tiktok_access_token_here

# TikTok API Base URL (default: https://open-api.tiktok.com)
TIKTOK_API_BASE_URL=https://open-api.tiktok.com

# ======================================
# Bluesky Configuration (Placeholder)
# ======================================

# Bluesky requires AT Protocol client implementation
# This is a placeholder - implement using atproto/bsky libraries
# See: https://atproto.com/

# ======================================
# Additional AI Providers (Optional)
# ======================================

# OpenAI Configuration (if using OpenAI instead of OpenRouter)
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-3.5-turbo

# Anthropic Configuration (if using Anthropic instead of OpenRouter)
ANTHROPIC_API_KEY=your_anthropic_api_key_here
ANTHROPIC_MODEL=claude-3-haiku-20240307

# ======================================
# Optional Features
# ======================================

# Enable placeholder posters for platforms not yet implemented
ENABLE_PLACEHOLDERS=false

